  <%- include('../_partials/aside') %>
    <div class="main-section">
      <div class="header">
        <%- include('../_partials/header') %>
      </div>
      <main class="form-container">
        <form id="form" class="space-y-4">
          <h1>Editar Item</h1>
          <div class="container-flex-inputs">
            <label for="name">Nome</label>
            <input name="name" type="text" value="<%=product.name%>" />
          </div>

          <div class="container-flex-inputs">
            <label for="price">Pre√ßo</label>
            <input name="price" type="text" value="<%=product.price%>"/>
            <span id="error-price" class="invisible">erro</span>
          </div>
          <input type="hidden" name="id" value="<%= product.id %>">
          <div id="result"></div>
          <button id="submit-button" type="submit">Editar</button>
        </form>
      </main>
    </div>
</div>

